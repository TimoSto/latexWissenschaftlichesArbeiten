				%Area to add citeifs via gui
			{aufsatzi}{\footnote{#3\citeaufsatzi{\72}{\66}{#2}.}}%
			{Buch}{\footnote{#3\citeBuch{\70}{\66}{#2}.}}%
			{citaviAufsatzDoi}{\footnote{#3\citecitaviAufsatzDoi{\72}{\66}{#2}.}}%
			{citaviInbookDoi}{\footnote{#3\citecitaviInbookDoi{\72}{\66}{#2}.}}%
			{citaviInCollectionDoi}{\footnote{#3\citecitaviInCollectionDoi{\73}{\66}{#2}.}}%
			{citaviInProceedingsDoi}{\footnote{#3\citecitaviInProceedingsDoi{\71}{\66}{#2}.}}%
			{faufsatz}{\footnote{#3\citefaufsatz{\72}{\66}{#2}.}}%
			{Norm}{\footnote{#3\citeNorm{\66}{#2}.}}%
			{onlineAufsatz}{\footnote{#3\citeonlineAufsatz{\70}{\66}{#2}.}}%
			{website}{\footnote{#3\citewebsite{\70}{\71}{#2}.}}%
		%end area
			}[\footnote{{\color{red}Typ "\type " nicht gefunden. Ändern oder in literatur.sty hinzufügen (siehe README)}}]%
		}}%
	}%
	\IfStrEqCase{\entryfound}{%
		{false}{\footnote{{\color{red}Literatureintrag mit Key "#1 " nicht gefunden}}}%
	}%
}}


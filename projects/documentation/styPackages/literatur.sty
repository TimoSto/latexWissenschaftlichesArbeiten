\newcommand{\citebibFootnote}[3]{{%
	\renewcommand{\entryfound}{false}%
	\DTLforeach*{literatur}%
	{\key=key,\type=type,\a=a,\b=b,\c=c,\d=d,\e=e,\f=f,\g=g,\h=h}%
	{%
		\IfStrEqCase{\key}{{#1}{%

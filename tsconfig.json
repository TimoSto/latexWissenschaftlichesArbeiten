{
  "compilerOptions": {
    /*"target": "es2015",
    "module": "es6"*/ /*,
    "sourceMap": true*/
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "es2016",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings/custom"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/",
    "typings/"
  ]
}